{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/users": {
    "description": "serves an array of users",
    "queries": [],
    "exampleResponse": {
      "users": [
        { "username": "ted", "name": "teddy", "avatar_url": "avatar.url" }
      ]
    }
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, default sorted by date descending",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "image.com/image",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "returns article object with the specified article id",
    "exampleResponse": {
      "article": {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an articles votes by the given amount",
    "exampleRequest": {
      "request": {
        "incVotes": 5
      }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 5,
        "article_img_url": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "returns array of comments for the given article_id. Ordered by most recent first",
    "exampleResponse": {
      "comments": {
        "comment_id": 1,
        "votes": 6,
        "created_at": "2018-05-30T15:59:13.341Z",
        "body": "Text from the comment..",
        "article_id": 1
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment with the given id. Returns nothing"
  }
}
